{
  "autorun": true,
  "autokill": true,
  "terminals": [
    {
      "name": "compiler",
      "description": "compiles source ts into lua with rbxtsc",
      "focus": true,
      "commands": [
        "if (Test-Path flamework.build) { Remove-Item flamework.build }",
        "if (Test-Path out) { Remove-Item -Recurse out }",
        "npm run watch"
      ]
    },
    {
      "name": "io-serve",
      "description": "for rbxts-object-to-tree",
      "split": "compiler",
      "command": "npx io-serve"
    },
    {
      "name": "rojo",
      "split": "compiler",
      "commands": [
        "Start-Sleep -Seconds 20",
        "rojo serve"
      ]
    }
  ]
}
